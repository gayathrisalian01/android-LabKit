<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Name Section -->
    <RelativeLayout
        android:id="@+id/relativeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/textviewname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/editviewname"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:hint="Enter your name"
            android:textColor="#333333" />

    </RelativeLayout>

    <!-- Gender Section -->
    <RadioGroup
        android:id="@+id/radiogrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeName"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp">

        <RadioButton
            android:id="@+id/rdmale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="16sp"
            android:textColor="#333333" />

        <RadioButton
            android:id="@+id/rdfemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_marginStart="20dp"
            android:checked="true"
            android:textSize="16sp"
            android:textColor="#333333" />
    </RadioGroup>

    <!-- Hobby Section -->
    <RelativeLayout
        android:id="@+id/relativeHobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiogrp"
        android:layout_centerHorizontal="true"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/chksport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:textSize="16sp"
            android:textColor="#333333" />

        <CheckBox
            android:id="@+id/chkArt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Art"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/chksport"
            android:textSize="16sp"
            android:textColor="#333333"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/chkSocialWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social Work"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/chkArt"
            android:textSize="16sp"
            android:textColor="#333333"
            android:checked="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeHobby"
        android:padding="16dp">

        <Button
            android:id="@+id/button1"
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button1"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textColor="#555555" />
    </RelativeLayout>

</RelativeLayout>
